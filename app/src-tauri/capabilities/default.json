{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "*"
        }
      ]
    },
    {
      "identifier": "opener:allow-default-urls",
      "allow": [
        {
          "url": "https"
        },
        {
          "url": "http"
        }
      ]
    },
    {
      "identifier": "opener:allow-open-url",
      "allow": [
        {
          "url": "https://*"
        }
      ]
    }
  ]
}